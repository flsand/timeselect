<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NumberPicker_Style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="npv_DividerColor">#26000000</item>
        <item name="npv_ItemPaddingVertical">5dp</item>
        <item name="npv_ItemPaddingHorizental">5sp</item>
        <item name="npv_MarginStartOfHint">40dp</item>
        <item name="npv_ShowCount">3</item>
        <item name="npv_TextColorHint">#343434</item>
        <item name="npv_TextColorNormal">#B2343434</item>
        <item name="npv_TextColorSelected">#343434</item>
        <item name="npv_TextSizeNormal">12sp</item>
        <item name="npv_TextSizeSelected">14sp</item>
        <item name="npv_WrapSelectorWheel">true</item>
    </style>

    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popupwindow_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_bottom_out</item>
    </style>
</resources>